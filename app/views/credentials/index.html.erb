<h1 class="mt-4">My Credentials</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Credentials shared with you.</li>
</ol>
<% if @credentials.empty? %>
<div class="card mb-4">
  <div class="card-body">
    YAY! You don't have any credentials yet.
  </div>
</div>
<% else %>
<div class="card mb-4">
  <div class="card-header">
      <i class="fas fa-table me-1"></i>
      Shared Credentials
  </div>
  <div class="card-body">
      <table id="datatablesSimple">
          <thead>
              <tr>
                  <th>Team</th>
                  <th>Description</th>
                  <th>Username (encrypted)</th>
                  <th>Password (encrypted)</th>
                  <th>Owner</th>
                  <th>Created at</th>
                  <th>Updated at</th>
                  <th>Actions</th>
              </tr>
          </thead>
          <tfoot>
              <tr>
                  <th>Team</th>
                  <th>Description</th>
                  <th>Username</th>
                  <th>Password (encrypted)</th>
                  <th>Owner</th>
                  <th>Created at</th>
                  <th>Updated at</th>
                  <th>Actions</th>
              </tr>
          </tfoot>
          <tbody>
            <% @credentials.each do |credential| %>
              <%= render credential %>
            <% end %>
          </tbody>
      </table>
  </div>
</div>
<% end %>

<%= link_to "New credential", new_user_credential_path(user_id:@user), class: "btn btn-success" %>