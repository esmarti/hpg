<h1 class="mt-4">Private credentials</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Shh! Not shared with anyone</li>
</ol>

<div class="card mb-4">
  <div class="card-header">
      <i class="fas fa-table me-1"></i>
      Private credentials
  </div>
  <div class="card-body">
      <table id="datatablesSimple">
          <thead>
              <tr>
                  <th>Team</th>
                  <th>Description</th>
                  <th>Username</th>
                  <th>Password (encrypted)</th>
                  <th>Owner</th>
                  <th>Created at</th>
                  <th>Updated at</th>
                  <th>Actions</th>
              </tr>
          </thead>
          <tfoot>
              <tr>
                  <th>Team</th>
                  <th>Description</th>
                  <th>Username</th>
                  <th>Password (encrypted)</th>
                  <th>Owner</th>
                  <th>Created at</th>
                  <th>Updated at</th>
                  <th>Actions</th>
              </tr>
          </tfoot>
          <tbody>
            <% @credentials.each do |credential| %>
              <%= render credential %>
            <% end %>
          </tbody>
      </table>
  </div>
</div>

<%= link_to "New credential", new_user_credential_path(user_id:@user), class: "btn btn-success" %>